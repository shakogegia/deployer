{
  "name": "Deployer",
  "version": "0.1.0",
  "description": "Deploye your apps painlesslly",
  "private": true,
  "main": "./main.js",
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "server": "nodemon server/app.js",
    "electron": "electron .",
    "pack": "electron-builder --output=app",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "me.gegia.deployer",
    "mac": {
      "category": "your.app.category.type",
      "icon": "./icon.png"
    }
  },
  "author": {
    "email" : "shalva.gegia@gmail.com",
    "name" : "Shalva Gegia",
    "url" : "http://gegia.me"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "bulma": "^0.6.2",
    "express": "^4.16.2",
    "rsync": "^0.6.1",
    "simple-git": "^1.89.0",
    "uuid": "^3.2.1",
    "vue": "^2.5.13"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-alpha.5",
    "@vue/cli-plugin-eslint": "^3.0.0-alpha.5",
    "@vue/cli-service": "^3.0.0-alpha.5",
    "electron": "1.7.12",
    "electron-builder": "^19.55.3",
    "vue-template-compiler": "^2.5.13"
  },
  "vue": {
    "lintOnSave": true
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
